<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT"> </Console>

    <RollingFile name="RollingFileInfo" fileName="loggers/info.log"
                 filePattern="logs/$${date:yyyy-MM}/info-%d{MM-dd-yyyy}-%i.log">

        <PatternLayout>
            <Pattern>%d %p %c [%t] %m%n</Pattern>
        </PatternLayout>

            <LevelRangeFilter minLevel="INFO" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>

        <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="250 KB"/>
        </Policies>

    </RollingFile>

    <RollingFile name="RollingFileError" fileName="loggers/error.log"
                 filePattern="logs/$${date:yyyy-MM}/error-%d{MM-dd-yyyy}-%i.log">

        <PatternLayout>
            <Pattern>%d %p %c [%t] %m%n</Pattern>
        </PatternLayout>

            <LevelRangeFilter minLevel="ERROR" maxLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>

        <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="250 KB"/>
        </Policies>

    </RollingFile>

    <RollingFile name="RollingFileWARN" fileName="loggers/warn.log"
                 filePattern="logs/$${date:yyyy-MM}/warn-%d{MM-dd-yyyy}-%i.log">

        <PatternLayout>
            <Pattern>%d %p %c [%t] %m%n</Pattern>
        </PatternLayout>

            <LevelRangeFilter minLevel="WARN" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/>

        <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="250 KB"/>
        </Policies>

    </RollingFile>

    <RollingFile name="RollingFileFATAL" fileName="loggers/fatal.log"
                 filePattern="logs/$${date:yyyy-MM}/fatal-%d{MM-dd-yyyy}-%i.log">

        <PatternLayout>
            <Pattern>%d %p %c [%t] %m%n</Pattern>
        </PatternLayout>

            <LevelRangeFilter minLevel="FATAL" maxLevel="FATAL" onMatch="ACCEPT" onMismatch="DENY"/>

        <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="250 KB"/>
        </Policies>

    </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileInfo"/>
            <AppenderRef ref="RollingFileError"/>
            <AppenderRef ref="RollingFileWARN"/>
            <AppenderRef ref="RollingFileFATAL"/>
        </Root>
    </Loggers>
</Configuration>